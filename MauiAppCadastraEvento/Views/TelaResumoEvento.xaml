<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCadastraEvento.Views.TelaResumoEvento"
             Title="Tela de Resumo de Evento">

    <StackLayout Padding="20">
        <Label Text="Resumo do Evento" FontSize="24" HorizontalOptions="Center" />
        <Label Text="{Binding Nome}" FontSize="18" />
        <Label Text="{Binding Local}" />
        <Label Text="{Binding DataInicio, StringFormat='Data de Início: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DataTermino, StringFormat='Data de Término: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dias'}" />
        <Label Text="{Binding NumeroParticipantes, StringFormat='Número de Participantes: {0}'}" />
        <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: R${0:F2}'}" />
        <Label Text="{Binding CustoTotal, StringFormat='Custo Total: R${0:F2}'}" />
    </StackLayout>
</ContentPage>